<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context = "com.sarveshrelekar.happy_birthday.MainActivity">


    <ImageView
        android:src = "@drawable/androidparty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/android_party"
        android:scaleType = "centerCrop" />
    
    <VideoView
        android:layout_width="300dp"
        android:layout_height="225dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/video" />

    <TextView
        android:text = "Happy Birthday Aneesh!!"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:fontFamily = "sans-serif-light"
        android:textSize = "32sp"
        android:textColor = "#FFFFFF"
        android:padding = "20dp"
        android:id="@+id/birthday_text_view"/>

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text= "From Sarvesh and Tejas"
        android:textSize = "32sp"
        android:textColor = "#FFFFFF"
        android:padding = "20dp"
        android:fontFamily = "sans-serif-light"
        android:layout_alignParentBottom = "true"
        android:layout_alignParentRight = "true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "play / pause"
        android:textAllCaps="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_below = "@id/birthday_text_view"
        android:id = "@+id/play_pause"
        android:onClick="playPause" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id ="@+id/reset"
        android:text="reset"
        android:textAllCaps="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below = "@id/birthday_text_view"
        android:onClick="ResetBtn"/>

</RelativeLayout>
